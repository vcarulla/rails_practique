<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign In</h2>
    <!-- TODO  Se usa form_tag en ves de form_for @xxxx porque no hay modelo al que conectar
    entonces crea un form "vainilla", se podria crear puro html tipo <form action="/sessions/new"-->
    <%= form_tag session_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil , class: 'form-control' %>
      </div>
      <div class="actions">
        <%= submit_tag "Sign in", class: 'btn btn-success btn-block' %>
      </div>
    <% end %>
  </div>
</div>
