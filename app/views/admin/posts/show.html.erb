<h1><%= @post.ttile %></h1>
<p><%= @post.body %></p>

<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= comment.body %>
      <div class="author">
        Commented by: <%= comment.user.email %>
      </div>
    </div>
  </div>
<% end %>
